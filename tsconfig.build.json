{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "components/**/*",
    "lib/**/*",
    "theme/**/*",
    "hooks/**/*",
    "types/**/*",
    "providers/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "app/**/*",
    "scripts/**/*",
    "dist/**/*"
  ]
}